@using MudBlazor

<NodeWidget Node="Node"
            Header="From-Message"
            MainColor="var(--from-message-node-color)">

    <MudSelect T="string"
               @bind-Value="Node.StringVal2"
               Variant="Variant.Outlined"
               Label="Type"
               Margin="Margin.Dense">
        <MudSelectItem Value="@("any")" />
        <MudSelectItem Value="@("string")" />
        <MudSelectItem Value="@("number")" />
        <MudSelectItem Value="@("boolean")" />
        <MudSelectItem Value="@("array")" />
    </MudSelect>

    <MudTextField T="string"
                  Label="Key"
                  @bind-Value="Node.StringVal1"
                  Variant="Variant.Outlined"
                  Margin="Margin.Dense" />

</NodeWidget>

@code
{
    [Parameter] public FromMessageNode Node { get; set; } = null!;
}